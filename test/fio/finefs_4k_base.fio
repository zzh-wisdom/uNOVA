; 顺序写文件，每个线程单独一个文件

[global]
; 目录需要事先存在
directory=/tmp/finefs
direct=1
buffered=0
thread=1
cpus_allowed=20-39,60-71
cpus_allowed_policy=split
numa_cpu_nodes=1
numa_mem_policy=bind:1
kb_base=1024
; verify=md5
do_verify=1
ioengine=sync
create_fsync=1
# create_only=1
# 运行完负载后，删除文件
# unlink=1
openfiles=1
description=顺序写文件,单个线程单独一个文件,io大小变化
size=3GB
bs=4K
rw=write
numjobs=16

time_based
runtime=30

# [append-4K]
# wait_for_previous
# overwrite=0

[seq-write-4K]
wait_for_previous
# rw=write
overwrite=0

